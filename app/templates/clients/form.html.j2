{% extends 'dashboard.html.j2' %}

{% block content %}
<div class="uk-child-width-1-2@m" uk-grid>
    <div>
        <h3 class="uk-text-uppercase">{{ title }}</h3>
        {% for message in get_flashed_messages() %}
        <div class="uk-alert-primary" uk-alert>
            <a class="uk-alert-close" uk-close></a>
            <p>{{ message }}</p>
        </div>
        {% endfor %}
        <hr>
        <form method='post'>
            {{ form.hidden_tag() }}
            <div class="uk-margin">
                {% if form.first_name.errors %}
                {{ form.first_name(class='uk-input uk-form-danger') }}
                {% for error in form.first_name.errors %}
                <small class="uk-form-help-block">
                    {{ error }}
                </small>
                {% endfor %}
                {% else %}
                {{ form.first_name(class='uk-input', placeholder='First name') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.last_name.errors %}
                {{ form.last_name(class='uk-input uk-form-danger') }}
                {% for error in form.last_name.errors %}
                <small class="uk-form-help-block">
                    {{ error }}
                </small>
                {% endfor %}
                {% else %}
                {{ form.last_name(class='uk-input', placeholder='Last name') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.email.errors %}
                {{ form.email(class='uk-input uk-form-danger') }}
                {% for error in form.email.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.email(class='uk-input', placeholder='Email') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.mobile.errors %}
                {{ form.mobile(class='uk-input uk-form-danger', type='number') }}
                {% for error in form.mobile.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.mobile(class='uk-input', placeholder='Mobile No', type='number') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.location.errors %}
                {{ form.location(class='uk-input uk-form-danger') }}
                {% for error in form.location.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.location(class='uk-input', placeholder='Location') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.submit(class='uk-button uk-button-primary') }}
            </div>
        </form>
    </div>
</div>
{% endblock %}
