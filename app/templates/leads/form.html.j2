{% extends 'dashboard.html.j2' %}

{% block content %}
<div class="uk-child-width-expand" uk-grid>
    <div>
        <h3>{{ title }}</h3>
        {% for message in get_flashed_messages() %}
        <div class="uk-alert-primary" uk-alert>
            <a class="uk-alert-close" uk-close></a>
            <p>{{ message }}</p>
        </div>
        {% endfor %}
        <hr>
        <form method='post'>
            {{ form.hidden_tag() }}
            <div class="uk-child-width-expand@m" uk-grid>
                <div>
                    <div class="uk-margin">
                        {% if form.first_name.errors %}
                        {{ form.first_name(class='uk-input uk-form-danger') }}
                        {% for error in form.first_name.errors %}
                        <small class="uk-form-help-block">
                            {{ error }}
                        </small>
                        {% endfor %}
                        {% else %}
                        {{ form.first_name(class='uk-input', placeholder='First name') }}
                        {% endif %}
                    </div>
                </div>

                <div>
                    <div class="uk-margin">
                        {% if form.last_name.errors %}
                        {{ form.last_name(class='uk-input uk-form-danger') }}
                        {% for error in form.last_name.errors %}
                        <small class="uk-form-help-block">
                            {{ error }}
                        </small>
                        {% endfor %}
                        {% else %}
                        {{ form.last_name(class='uk-input', placeholder='Last name') }}
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="uk-child-width-expand@m" uk-grid>
                <div>
                    <div class="uk-margin">
                        {% if form.email.errors %}
                        {{ form.email(class='uk-input uk-form-danger') }}
                        {% for error in form.email.errors %}
                        <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                        {% endfor %}
                        {% else %}
                        {{ form.email(class='uk-input', placeholder='Email') }}
                        {% endif %}
                    </div>
                </div>
                <div>
                    <div class="uk-margin">
                        {% if form.phone.errors %}
                        {{ form.phone(class='uk-input uk-form-danger') }}
                        {% for error in form.phone.errors %}
                        <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                        {% endfor %}
                        {% else %}
                        {{ form.phone(class='uk-input', placeholder='Phone No') }}
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="uk-margin">
                {% if form.location.errors %}
                {{ form.location(class='uk-input uk-form-danger') }}
                {% for error in form.location.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.location(class='uk-input', placeholder='Location') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.source.label(class='uk-label') }}
                {% if form.source.errors %}
                {{ form.source(class='uk-select uk-form-danger') }}
                {% for error in form.source.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.source(class='uk-select', placeholder='Source') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.proposal.label(class='uk-label') }}
                {% if form.proposal.errors %}
                {{ form.proposal(class='uk-input uk-form-danger') }}
                {% for error in form.proposal.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.proposal(class='uk-input', placeholder='Proposal') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.status.label(class='uk-label') }}
                {% if form.status.errors %}
                {{ form.status(class='uk-select uk-form-danger') }}
                {% for error in form.status.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.status(class='uk-select', placeholder='Status') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.lead_type.label(class='uk-label') }}
                {% if form.lead_type.errors %}
                {{ form.lead_type(class='uk-select uk-form-danger') }}
                {% for error in form.lead_type.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.lead_type(class='uk-select', placeholder='Type') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.probability.label(class='uk-label') }}
                {% if form.probability.errors %}
                {{ form.probability(class='uk-select uk-form-danger') }}
                {% for error in form.probability.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.probability(class='uk-select', placeholder='Type') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.land_id.label(class='uk-label') }}
                {% if form.land_id.errors %}
                {{ form.land_id(class='uk-select uk-form-danger') }}
                {% for error in form.land_id.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.land_id(class='uk-select', placeholder='Assignee') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.user_id.label(class='uk-label') }}
                {% if form.user_id.errors %}
                {{ form.user_id(class='uk-select uk-form-danger') }}
                {% for error in form.user_id.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.user_id(class='uk-select', placeholder='Assignee') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.submit(class='uk-button uk-button-primary') }}
            </div>
        </form>
    </div>
</div>
{% endblock %}
