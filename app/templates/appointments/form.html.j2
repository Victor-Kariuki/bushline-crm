{% extends 'dashboard.html.j2' %}

{% block content %}
<div class="uk-child-width-1-2@m" uk-grid>
    <div>
        <h3>{{ title }}</h3>
        <hr>
        <form method="post">
            {{ form.hidden_tag() }}

            <div class="uk-margin">
                {% if form.title.errors %}
                {{ form.title(class_='uk-input uk-form-danger') }}
                {% for error in form.title.errors %}
                <small class="uk-form-help-block">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.title(class_='uk-input', placeholder='Title') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.description.errors %}
                {{ form.description(class_='uk-textarea uk-form-danger', rows="5") }}
                {% for error in form.description.errors %}
                <small class="uk-form-help-block uk-text-danger">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.description(class_='uk-textarea', rows="5", placeholder='Description') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.date.errors %}
                {{ form.date(class_='uk-input uk-form-danger', type="date") }}
                {% for error in form.date.errors %}
                <small class="uk-form-help-block">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.date(class_='uk-input', placeholder='Date', type="date") }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.time.errors %}
                {{ form.time(class_='uk-input uk-form-danger') }}
                {% for error in form.time.errors %}
                <small class="uk-form-help-block">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.time(class_='uk-input', placeholder='Title') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.inquiry.errors %}
                {{ form.inquiry(class_='uk-input uk-form-danger') }}
                {% for error in form.inquiry.errors %}
                <small class="uk-form-help-block">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.inquiry(class_='uk-input', placeholder='Inquiry') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {% if form.client.errors %}
                {{ form.client(class_='uk-input uk-form-danger') }}
                {% for error in form.client.errors %}
                <small class="uk-form-help-block">{{ error }}</small>
                {% endfor %}
                {% else %}
                {{ form.client(class_='uk-input', placeholder='Client') }}
                {% endif %}
            </div>

            <div class="uk-margin">
                {{ form.submit(class='uk-button uk-button-primary') }}
            </div>
        </form>
    </div>
</div>
{% endblock %}